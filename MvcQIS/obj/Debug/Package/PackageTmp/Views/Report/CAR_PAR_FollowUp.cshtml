                //    pie: {
                //        showInLegend: true,
                //        animation: false,
                //        allowPointSelect: true,
                //        cursor: 'pointer',
                //        formatter: function () {
                //            return this.point.name;
                //        }
                //    },
                //    series: {
                //        dataLabels: {
                //            enabled: true,
                //            formatter: function () {
                //                return this.data
                //                //return Highcharts.numberFormat(this.percentage, 2)
                //                //Math.round(this.percentage * 100) / 100 + ' %';
                //            },
                //            distance: -30,
                //            color: 'white'
                //        }
                //    }
                //},
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            color: '#000000',
                            connectorColor: '#000000',
                            formatter: function () {
                                return '<b>' + this.point.name + '</b>: ' + Highcharts.numberFormat(this.percentage, 2) + ' % (' + this.y + ')';
